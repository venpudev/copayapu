---
import Hamburger from "../hamburger-menu/Hamburger.astro";

const logo = {
  src: "/copa-logo.webp",
  alt: "Automotriz Logo",
  width: 200,
  height: 80
};
const socialLinks = [
    { 
        name: "Facebook", 
        href: "https://web.facebook.com/copayapuautomotriz", 
        iconClass: "fab fa-facebook-f"
    },
    { 
        name: "Instagram", 
        href: "https://www.instagram.com/copayapuautomotriz/", 
        iconClass: "fab fa-instagram"
    }
];

const navLinks = [
    { name: "Inicio", href: "/" },
    { name: "Nosotros", href: "/nosotros" },
    { name: "Catálogo", href: "/catalogo" },
    { name: "Contacto", href: "/contacto" }
];

---

<nav class="bg-black text-white font-sans fixed w-full top-0 z-50 border-b border-[#262629]">
  <div class="relative md:w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo (Always on the left) -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center">
          <img class="h-18 w-auto" src={logo.src} alt={logo.alt} width={logo.width} height={logo.height} />
        </a>
      </div>

      <!-- Navigation Links (Hidden on mobile, centered on desktop) -->
      <div class="hidden lg:flex lg:items-center lg:space-x-8 lg:absolute lg:left-1/2 lg:transform lg:-translate-x-1/2">
        {navLinks.map((link) => (
          <a href={link.href} class="text-white hover:text-[#e5cd7d] px-4 py-2 rounded-md text-lg font-bold tracking-wide transition-colors">
            {link.name}         
          </a>
        ))}
      </div>

      <!-- Social Media Icons (Always visible, smaller on mobile) -->
      <div class="flex space-x-2 lg:space-x-4">
        {socialLinks.map((social) => (
          <a 
            href={social.href} 
            target="_blank"
            rel="noopener noreferrer"
            class="w-8 h-8 lg:w-10 lg:h-10 rounded-full flex items-center justify-center bg-[#262629] hover:bg-[#e63333] transition-colors duration-200"
            aria-label={social.name}
          >
            <i class={`${social.iconClass} text-white text-sm lg:text-lg`}></i>
          </a>
        ))}
      </div>

      <!-- Mobile hamburger menu - EN LA POSICIÓN CORRECTA -->
      <div class="lg:hidden ml-4">
        <Hamburger />  
      </div>

    </div>
  </div>

</nav>
